{
  "name": "@sugardarius/anzen",
  "version": "0.1.0",
  "description": "A fast, framework validation agnostic, type-safe factory for creating Next.JS App Router route handlers.",
  "license": "MIT",
  "packageManager": "npm@11.3.0",
  "workspaces": [
    ".",
    "www"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "module": "./dist/index.js",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sugardarius/anzen.git"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "dev:www": "turbo run dev --filter=www",
    "build:www": "turbo run build --filter=www",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint src/",
    "lint:tsc": "tsc --noEmit",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.2",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
